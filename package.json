{
  "name": "node-express-skeleton",
  "version": "1.0.0",
  "description": "A basic skeleton project for NodeJS (TypeScript, Jest...)",
  "main": "app.ts",
  "type": "module",
  "scripts": {
    "start": "nodemon",
    "build": "tsc",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint --ext .js,.ts src --color",
    "format": "prettier --write src/**/*.{ts,json}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vahdet/node-express-skeleton.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vahdet/node-express-skeleton/issues"
  },
  "homepage": "https://github.com/vahdet/node-express-skeleton#readme",
  "dependencies": {
    "esm": "^3.2.25",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  },
  "lint-staged": {
    "*.+(js|ts)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
